<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="display-1 text-center">Criar contar ou Entrar</h1>
      <p class="text-center lead">Faça o cadastro ou login</p>

      <%- include('includes/messages') %>

      <div class="row">
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Se você NÃO tiver login cadastrado, preencha o formulário abaixo</p>
          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Criar conta</button>
          </form>

        </div>
        <div class="col-lg">
          <h4>Faça seu login</h4>
          <p>Se você tiver login cadastrado, preencha o formulário abaixo</p>
          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Acessar conta</button>
          </form>
        </div>
      </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>

